<h2>Basket</h2>
<link rel="stylesheet" href="/css/cart.css">
<div class="cart">
   {{#each result}}
      <div class="screen">
        <div id="color-layer" class="layer" style="background-color:{{color}}"></div>
        <div id="img-layer" class="layer"><img src="{{image}}" alt="Изображение для носка"></div>
        <div id="pattern-layer" class="layer"><img src="{{pattern}}" alt="Узор для носка"></div>
        <div id="upper-layer" class="layer"><img src="/img/socks_upper_level.png" alt="Шаблон носка"></div>
      </div>
    {{/each}}
</div>
<div class="cart1">
    {{#each cart}}
        <div class="wrap">
            <p class="counter">{{this.count}}</p>
            <div>
                <button class="decrement">-</button>
                <button class="increment">+</button>
            </div>
        </div>
        <p>{{this.full_price}}</p>
    {{/each}}
</div>
<h2>колличество: {{sumItem}}</h2>
<h3>Итого: {{sum}}</h3>
<script src="/js/counter.js"></script>
