<h2>Basket</h2>
<div>
   {{#each result}}
      <div class="screen">
        <div id="color-layer" class="layer" style="background-color:{{color}}"></div>
        <div id="img-layer" class="layer"><img src="{{image}}" alt="Изображение для носка"></div>
        <div id="pattern-layer" class="layer"><img src="{{pattern}}" alt="Узор для носка"></div>
        <div id="upper-layer" class="layer"><img src="/img/socks_upper_level.png" alt="Шаблон носка"></div>
      </div>
    {{/each}}
</div>
<div>
    {{#each cart}}
        <p>{{this.count}}</p>
        <p>{{this.full_price}}</p>
    {{/each}}
    <h3>Итого: {{sum}}</h3>
</div>
